<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.gfsnutrition" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>GFS Nutrition Facts</name>
    <description>
        GFS Nutrition Facts is a barcode scanner app that specializes in giving the user details on their food!
    </description>
    <author email="cezimmerman90@gmail.com" href="https://gfs.com">
        Chuck Zimmerman
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <icon density="mdpi" src="www/res/icon/android/mipmap-mdpi/gfs_nutrition_laucher.png" />
        <icon density="hdpi" src="www/res/icon/android/mipmap-hdpi/gfs_nutrition_laucher.png" />
        <icon density="xhdpi" src="www/res/icon/android/mipmap-xhdpi/gfs_nutrition_laucher.png" />
        <icon density="xxhdpi" src="www/res/icon/android/mipmap-xxhdpi/gfs_nutrition_laucher.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/mipmap-xxxhdpi/gfs_nutrition_laucher.png" />
        <splash density="land-ldpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="land-mdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="land-hdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="port-ldpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="port-mdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="port-hdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="port-xhdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="port-xxhdpi" src="www/res/screen/android/barcode-512.png" />
        <splash density="port-xxxhdpi" src="www/res/screen/android/barcode-512.png" />
        <uses-permission name="android.permission.INTERNET" />
        <uses-permission name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission name="android.permission.CAMERA" />
        <uses-permission name="android.permission.RECORD_AUDIO" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
    </platform>
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
    <plugin name="cordova-plugin-battery-status" spec="~1.2.4" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.1.0" />
    <plugin name="cordova-plugin-media-capture" spec="~3.0.1" />
    <plugin name="cordova-plugin-file" spec="~6.0.1" />
    <plugin name="cordova-plugin-compat" spec="^1.2.0" />
    <plugin name="cordova-plugin-camera" spec="~4.0.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^7.1.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-firebase-analytics" spec="^0.13.0">
        <variable name="FIREBASE_VERSION" value="11.6.+" />
    </plugin>
    <plugin name="cordova-support-google-services" spec="^1.1.0" />
    <plugin name="cordova-plugin-x-socialsharing" spec="git+https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git" />
    <engine name="android" spec="^7.0.0" />
</widget>
